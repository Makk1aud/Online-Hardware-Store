<Page x:Class="Online_hardware_store.Pages.MainScreenPages.PageNewsPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Online_hardware_store.Pages.MainScreenPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageNewsPanel">

    <Grid>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
            <Image Source="/Images/News Panel Images/VKImage.jpg"
                   Name="ImageVK"
                   Style="{StaticResource NewsPanelImage}"
                   PreviewMouseDown="ImageMouseDown"/>
            <Image Source="/Images/News Panel Images/TGImage.png"
                   Name="ImageTG"
                   Style="{StaticResource NewsPanelImage}"
                   PreviewMouseDown="ImageMouseDown"/>
        </StackPanel>
    </Grid>
</Page>

<Window x:Class="Online_hardware_store.Windows.ListOfGoodsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Online_hardware_store.Windows"
        mc:Ignorable="d"
        Title="ListOfGoodsWindow" 
        Height="550" Width="800"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Frame Name="frameSortPanel"
               Grid.Row="1"/>
        <Frame Name="frameTopPanel"
               Grid.Row="0"
               Grid.ColumnSpan="2"/>
        <Frame Name="frameListOfGoods"
               Grid.Row="1"
               Grid.Column="1"/>
        <Frame Name="frameRecentlyViewed"
               Grid.Row="2"
               Grid.ColumnSpan="2"/>
    </Grid>
</Window>
